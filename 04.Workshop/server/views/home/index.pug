extends ../shared/layout

block main-content
  if (nonFatalError)
    h1.nonFatalError= nonFatalError
  div.row
    for thread in threads
      div(class="col-lg-1 col-offset-6 centered" style="margin-left: 50px; width: 300px;")  
        - let threadLink = '/post/' + thread.threadId + '/' + thread.title
        a(href=threadLink class="label label-success" style="font-size: 25px;")= thread.title
        br
        blockquote
          p= thread.content
          footer= thread.author.username