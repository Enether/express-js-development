extends ../shared/layout

block main-content
  form.form-horizontal(action='/thread/create', method='POST')
    fieldset
      #legend
        legend(style="color: red;") Create a new forum post
      .control-group
        // Title
        label.control-label(for='title' style="color: red;") Title
        .controls
          input.input-xlarge(type='text', name='title', placeholder='' required style="width:450px; height: 30px;")
      .control-group
        // Content
        label.control-label(for='content' style="color: red;") Body
        .controls
          textarea.input-xlarge(name='content', placeholder='' required style="width:640px; height:320px;")
      .control-group
        // Button
        .controls
          button.btn.btn-success Create Post